<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="280dp"
    android:layout_height="412dp">


    <TextView
        android:id="@+id/quick_start_textView_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quick_start_turn_on"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/quick_start_textView_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quick_start_turn_on_small"/>
    <ImageView
        android:id="@+id/quick_start_imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_gravity="center_horizontal"/>

</LinearLayout>